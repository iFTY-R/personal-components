{
  "name": "@mono/core",
  "version": "0.0.1",
  "description": "@mono/core",
  "author": "cjinhuo",
  "license": "MIT",
  "main": "src/index.ts",
  "module": "esm/index.esm.js",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./esm/index.js"
    }
  },
  "types": "esm/index.d.ts",
  "publishConfig": {
    "main": "esm/index.js",
    "module": "esm/index.esm.js",
    "types": "esm/index.d.ts"
  },
  "type": "module",
  "files": ["dist"],
  "scripts": {
    "esm": "tsc -b ./tsconfig.json",
    "rollup": "batch-rollup -d ./rollups",
    "build": "run-s esm rollup",
    "build:cjs": "batch-rollup -d ./rollups -f cjs",
    "lint": "eslint ./src/**",
    "test": "jest --config jest.config.cjs"
  },
  "dependencies": {
    "@mono/rollup": "workspace:*",
    "@mono/shared": "workspace:*"
  },
  "devDependencies": {
    "@mono/tsconfig": "workspace:*",
    "@mono/eslint-config": "workspace:*"
  }
}
