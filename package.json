{
	"name": "mono",
	"version": "0.0.1",
	"private": true,
	"description": "the best monorepo",
	"workspaces": [
		"packages/*",
		"utils/*",
		"app/*",
		"e2e",
		"e2e/demos/*",
		"main"
	],
	"scripts": {
		"commit": "git add . && git cz",
		"esm": "pnpm --parallel esm",
		"build": "pnpm --parallel build",
		"test": "pnpm --parallel test",
		"web:dev": "pnpm --filter @mono/react-18 dev",
		"web:vue:dev": "pnpm --filter @mono/vue-3 dev",
		"web:vue-js:dev": "pnpm --filter @mono/vue-3-js dev",
		"clean": "shx rm -rf packages/**/*.tsbuildinfo && shx rm -rf ./{packages,app}/*/{esm,dist}",
		"clean:node_module": "rm -rf ./node_modules && rm -rf ./{packages,app,e2e}/**/node_modules",
		"postinstall": "husky install",
		"preinstall": "npx only-allow pnpm"
	},
	"packageManager": "pnpm@9.0.6",
	"engines": {
		"node": ">=16.18.0",
		"pnpm": ">=8"
	},
	"author": "cjinhuo",
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@changesets/cli": "^2.27.10",
		"@commitlint/config-conventional": "^19.6.0",
		"@mono/tsconfig": "workspace:^",
		"@rollup/plugin-alias": "^5.1.1",
		"@rollup/plugin-commonjs": "^28.0.1",
		"@rollup/plugin-html": "^1.0.4",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^15.3.0",
		"@rollup/plugin-strip": "^3.0.4",
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^12.1.1",
		"@types/debug": "^4.1.12",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.1",
		"chalk": "^5.3.0",
		"clipanion": "4.0.0-rc.4",
		"consola": "^3.2.3",
		"cz-git": "^1.11.0",
		"debug": "^4.3.7",
		"fast-glob": "^3.3.2",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.10",
		"npm-run-all": "^4.1.5",
		"nx": "^20.1.4",
		"prettier": "^3.4.1",
		"rollup": "^4.28.0",
		"rollup-plugin-cleanup": "^3.2.1",
		"rollup-plugin-clear": "^2.0.7",
		"rollup-plugin-sizes": "^1.0.6",
		"rollup-plugin-visualizer": "^5.12.0",
		"shx": "^0.3.4",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"tslib": "^2.8.1",
		"typescript": "^5.7.2"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-git"
		}
	},
	"pnpm": {
		"peerDependencyRules": {
			"allowedVersions": {
				"rollup": "^3"
			}
		}
	}
}
